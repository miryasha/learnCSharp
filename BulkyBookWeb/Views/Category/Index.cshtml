@model IEnumerable<Category>


@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new Category
            </a>
        </div>
    </div>


    <table class"Table table-borderd table-striped" stype="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    DisplayOrder
                </th>
                <th>
                    CreatedDateTime
                </th>
            </tr>
        </thead>
        <br/>
        <br/>

        <tbody>
            @foreach(var obj in Model) 
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td width="50%">
                        @obj.CreatedDateTime
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>